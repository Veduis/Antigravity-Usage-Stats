{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ],
            "label": "npm: build"
        },
        {
            "type": "npm",
            "script": "build:watch",
            "group": "build",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true,
            "label": "npm: build:watch"
        },
        {
            "type": "npm",
            "script": "lint",
            "group": "test",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "label": "npm: lint"
        }
    ]
}